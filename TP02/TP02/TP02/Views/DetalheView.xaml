<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP02.Views.DetalheView">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="Nome:" FontSize="Medium" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                <Label Text="{Binding Nome}" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Idade:" FontSize="Medium" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                <Label Text="{Binding Idade}" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Profissão:" FontSize="Medium" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                <Label Text="{Binding Profissao}" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="País:" FontSize="Medium" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                <Label Text="{Binding Pais}" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
            </StackLayout>
            <Button x:Name="btnVoltar" Text="Home" Clicked="BtnVoltar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>